rules_version = '2';
service cloud.firestore {
  match /databases/{database}/documents {
    
    // Helper functions
    function isAuthenticated() {
      return request.auth != null;
    }
    
    function isOwner(userId) {
      return isAuthenticated() && request.auth.uid == userId;
    }
    
    function hasRole(role) {
      return isAuthenticated() && 
             get(/databases/$(database)/documents/users/$(request.auth.uid)).data.role == role;
    }
    
    function isTeacher() {
      return hasRole('professor-autonomo') || hasRole('professor-escola');
    }
    
    function isSchoolTeacher() {
      return hasRole('professor-escola');
    }
    
    function isStudent() {
      return hasRole('aluno');
    }
    
    function isAdmin() {
      return hasRole('admin');
    }
    
    // Users collection
    match /users/{userId} {
      allow read: if isOwner(userId) || isAdmin();
      allow update: if isOwner(userId) && 
                       !request.resource.data.diff(resource.data).affectedKeys().hasAny(['role', 'subscription']);
      allow create: if isAdmin();
      allow delete: if isAdmin();
      allow read: if isSchoolTeacher() && 
                     userId in get(/databases/$(database)/documents/users/$(request.auth.uid)).data.studentIds;
    }
    
    // Schools collection
    match /schools/{schoolId} {
      allow read: if isAuthenticated() && 
                     request.auth.uid in resource.data.teacherIds;
      allow create, update, delete: if isAdmin();
    }
    
    // Classes collection
    match /classes/{classId} {
      allow read, update: if isAuthenticated() && 
                             resource.data.teacherId == request.auth.uid;
      allow read: if isStudent() && 
                     request.auth.uid in resource.data.studentIds;
      allow create: if isSchoolTeacher() && 
                       request.resource.data.teacherId == request.auth.uid;
      allow delete: if isAuthenticated() && 
                       resource.data.teacherId == request.auth.uid;
    }
    
    // Challenges collection
    match /challenges/{challengeId} {
      allow read: if isAuthenticated() && resource.data.isPublic == true;
      allow read: if isAuthenticated() && 
                     resource.data.createdBy == request.auth.uid;
      allow create: if isTeacher() && 
                       request.resource.data.createdBy == request.auth.uid;
      allow update, delete: if isAuthenticated() && 
                               resource.data.createdBy == request.auth.uid;
      allow read, write: if isAdmin();
    }
    
    // Student Progress collection
    match /studentProgress/{progressId} {
      allow read, update: if isStudent() && 
                             resource.data.studentId == request.auth.uid;
      allow read: if isSchoolTeacher();
      allow create: if isAuthenticated();
      allow read, write: if isAdmin();
    }
    
    // Badges collection
    match /badges/{badgeId} {
      allow read: if isAuthenticated();
      allow write: if isAdmin();
    }
    
    // User Badges collection
    match /userBadges/{userBadgeId} {
      allow read: if isAuthenticated() && 
                     resource.data.userId == request.auth.uid;
      allow create: if isAuthenticated();
      allow read, write: if isAdmin();
    }
    
    // Learning Materials collection
    match /learningMaterials/{materialId} {
      allow read: if isAuthenticated();
      allow write: if isAdmin();
    }
    
    // Material Progress
    match /materialProgress/{progressId} {
      allow read, update: if isAuthenticated() && 
                             resource.data.userId == request.auth.uid;
      allow create: if isAuthenticated();
    }
  }
}

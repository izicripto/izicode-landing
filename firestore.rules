rules_version = '2';
service cloud.firestore {
  match /databases/{database}/documents {
    
    // Helper functions
    function isAuthenticated() {
      return request.auth != null;
    }
    
    function isOwner(userId) {
      return isAuthenticated() && request.auth.uid == userId;
    }
    
    function hasRole(role) {
      return isAuthenticated() && 
             get(/databases/$(database)/documents/users/$(request.auth.uid)).data.role == role;
    }
    
    function isTeacher() {
      return hasRole('teacher');
    }
    
    function isSchoolTeacher() {
      return hasRole('school_admin') || hasRole('teacher');
    }
    
    function isStudent() {
      return hasRole('student');
    }
    
    function isSchoolAdmin() {
      return hasRole('school_admin');
    }
    
    function isAdmin() {
      return hasRole('admin');
    }
    
    // Users collection
    match /users/{userId} {
      allow read: if isAuthenticated();
      allow write: if request.auth != null && request.auth.uid == userId;
      allow delete: if isAdmin();
      
      // Projetos do usu√°rio
      match /projects/{projectId} {
        allow read, write: if isOwner(userId) || isAdmin();
      }
    }
    
    // Schools collection
    match /schools/{schoolId} {
      allow read: if isAuthenticated();
      allow create: if isSchoolAdmin() || isAdmin();
      allow update: if (isSchoolAdmin() && request.auth.uid == resource.data.adminId) || isAdmin();
    }
    
    // Classes collection
    // Classes collection
    match /classes/{classId} {
      allow read: if isAuthenticated();
      allow create: if isSchoolTeacher() || isSchoolAdmin() || isAdmin();
      allow update, delete: if isSchoolAdmin() || isAdmin() || (isTeacher() && resource.data.teacherId == request.auth.uid);
    }
    
    // Challenges collection
    match /challenges/{challengeId} {
      allow read: if isAuthenticated() && resource.data.isPublic == true;
      allow read: if isAuthenticated() && 
                     resource.data.createdBy == request.auth.uid;
      allow create: if isTeacher() && 
                       request.resource.data.createdBy == request.auth.uid;
      allow update, delete: if isAuthenticated() && 
                               resource.data.createdBy == request.auth.uid;
      allow read, write: if isAdmin();
    }
    
    // Student Progress collection
    match /studentProgress/{progressId} {
      allow read, update: if isStudent() && 
                             resource.data.studentId == request.auth.uid;
      allow read: if isSchoolTeacher();
      allow create: if isAuthenticated();
      allow read, write: if isAdmin();
    }
    
    // Badges collection
    match /badges/{badgeId} {
      allow read: if isAuthenticated();
      allow write: if isAdmin();
    }
    
    // User Badges collection
    match /userBadges/{userBadgeId} {
      allow read: if isAuthenticated() && 
                     resource.data.userId == request.auth.uid;
      allow create: if isAuthenticated();
      allow read, write: if isAdmin();
    }
    
    // Learning Materials collection
    match /learningMaterials/{materialId} {
      allow read: if isAuthenticated();
      allow write: if isAdmin();
    }
    
    // Material Progress
    match /materialProgress/{progressId} {
      allow read, update: if isAuthenticated() && 
                             resource.data.userId == request.auth.uid;
      allow create: if isAuthenticated();
    }

    // Leads (Contact Form)
    match /leads/{leadId} {
      // Allow anyone (public) to submit a contact form
      allow create: if true;
      // Only admins can read leads
      allow read: if isAdmin();
    }
  }
}
